<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171">
    <top>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Bouton 1"/>
            <Button text="Bouton 2"/>
            <Button text="Bouton 3"/>
        </HBox>
    </top>
    <left>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Label 1"/>
            <Label text="Label 2"/>
            <Label text="Label 3"/>
        </VBox>
    </left>
    <center>
        <GridPane hgap="10" vgap="10">
            <Button text="Bouton A" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Button text="Bouton B" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Button text="Bouton C" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Button text="Bouton D" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </GridPane>
    </center>
</BorderPane>
